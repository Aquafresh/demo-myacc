{
  "compilerOptions": {
    "declaration": false,
    "allowSyntheticDefaultImports": true,
    "allowJs": false,
    "checkJs": false,
    "esModuleInterop": true,
    "target": "es6",
    "downlevelIteration": true,
    "importHelpers": true,
    "sourceMap": true,
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "lib": ["dom", "es2015", "es2016", "es2017", "es2018"],
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "noEmitOnError": false,
    "noImplicitAny": false, //temporarily
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "baseUrl": "./",
    "paths": {
      "@crm-framework/*": ["node_modules/@crm-framework/*/src"]
    }
  },
  "include": ["**/*.ts", "**/*.js", "**/*.jsx", "**/*.tsx", "typings/**/*.ts"],
  "exclude": ["node_modules", "dist", ".publish"]
}
